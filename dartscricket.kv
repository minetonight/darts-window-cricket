<MessageScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'

        Label:
            id: title_label
            text: 'Game History'
            font_size: '24sp'
            bold: True
            size_hint_y: 0.1

        ScrollView:
            id: scroll_view
            size_hint_y: 0.8
            do_scroll_x: False
            do_scroll_y: True
            scroll_type: ['bars', 'content']
            
            Label:
                id: history_text
                text: ''
                font_size: '16sp'
                size_hint_y: None
                height: self.texture_size[1] # key for scrolling
                text_size: self.width - dp(20), None  # Account for padding
                halign: 'left'  # Left align text
                valign: 'top'   # Start from top
                padding: '10dp'  # Add padding around text

        BoxLayout:
            size_hint_y: 0.1
            spacing: '10dp'
            Button:
                text: 'OK'
                on_release: root.on_ok()
                size_hint_x: 0.5
            Button:
                text: 'Back'
                on_release: root.on_back()
                size_hint_x: 0.5 