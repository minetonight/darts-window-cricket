            size_hint_y: 0.8
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: '2dp'
                padding: '2dp'

        BoxLayout:
            size_hint_y: 0.1
            spacing: '10dp'

            Button:
                text: 'Back'
                size_hint_x: 0.23
                background_normal: ''
                background_color: (0.3, 0.3, 0.3, 1)
                color: (0.9, 0.9, 0.9, 1)
                font_size: '18sp'
                bold: True
                on_release: root.manager.current = 'data_input'
            Button:
                text: '🗑️'
                size_hint_x: 0.1
                background_normal: ''
                background_color: (0.3, 0.3, 0.3, 1)
                color: (0.9, 0.3, 0.3, 1) # Red-ish text
                font_name: 'assets/fonts/NotoEmoji-Regular.ttf'
                font_size: '28sp'
                bold: True
                on_release: root.confirm_delete()

            Button:
                text: 'Read Text'
                size_hint_x: 0.33
                background_normal: ''
                background_color: (0.3, 0.7, 0.3, 1)
                color: (1, 1, 1, 1)
                font_size: '18sp'
                bold: True
                on_release: root.load_selected_file()

            Button:
                text: 'Replay'
                size_hint_x: 0.33
                background_normal: ''
                background_color: (0.3, 0.7, 0.3, 1)
                color: (1, 1, 1, 1)
                font_size: '18sp'
                bold: True
                on_release: root.replay_selected_file()
                
        BoxLayout:
            size_hint_y: 0.1
            spacing: '10dp'
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: '10dp'
                
                Button:
                    text: 'Export all to zip'
                    size_hint_x: 0.5
                    background_normal: ''
                    background_color: (0.3, 0.7, 0.3, 1)
                    color: (1, 1, 1, 1)
                    font_size: '18sp'
                    bold: True
                    on_release: root.export_history()

                Button:
                    text: 'Import zip'
                    size_hint_x: 0.5
                    background_normal: ''
                    background_color: (0.3, 0.7, 0.3, 1)
                    color: (1, 1, 1, 1)
                    font_size: '18sp'
                    bold: True
                    on_release: root.import_history()

<HistoryItem@BoxLayout>:
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.2, 1) if self.selected else (0.15, 0.15, 0.15, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'horizontal'
    size_hint_y: None
    height: dp(56)
    padding: '10dp'
    spacing: '10dp'

    Label:
        text: root.text
        font_size: '18sp'
        color: (0.9, 0.9, 0.9, 1)
        size_hint_x: 1
        text_size: self.size
        halign: 'left'
        valign: 'middle'

