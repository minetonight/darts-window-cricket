#:kivy 2.2.1
#:import Spinner kivy.uix.spinner.Spinner
#:import PlayerContainer main.PlayerContainer

<SectorButton>:
    background_normal: ''
    color: (1, 1, 1, 1)  # White text
    font_size: '28sp'
    bold: True
    font_name: 'assets/fonts/Roboto-Bold.ttf'
    size_hint_y: None
    height: dp(50)
    canvas.before:
        Color:
            rgba: [0.2, 0.5, 0.2, 1] if self.sector_state == 'player_open' else ([0.6, 0.4, 0.0, 1] if self.sector_state == 'opponent_open' else ([0.3, 0.3, 0.3, 1] if self.sector_state == 'closed' else [0.2, 0.4, 0.6, 1]))
    canvas.after:
        Color:
            rgba: [0.2, 0.5, 0.2, 1] if self.sector_state == 'player_open' else ([0.6, 0.4, 0.0, 1] if self.sector_state == 'opponent_open' else ([0.3, 0.3, 0.3, 1] if self.sector_state == 'closed' else [0.2, 0.4, 0.6, 1]))
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Label>:
    font_size: '24sp'
    font_name: 'assets/fonts/Roboto-Bold.ttf'
    color: (0.9, 0.9, 0.9, 1)  # Light gray text for dark theme
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<SectorIndicator>:
    orientation: 'vertical'  # Changed to vertical to stack marks and dots
    size_hint_y: None
    height: dp(50)
    padding: ['5dp', '5dp']
    spacing: '2dp'  # Reduced spacing for tighter layout

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint_x: 1
        size_hint_y: 0.7  # Take 70% of height for marks

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: dp(100)
            spacing: '5dp'

            Label:
                id: mark1
                size_hint_x: None
                width: dp(30)
                font_size: '40sp'
                font_name: 'assets/fonts/CODE2000.ttf'
                bold: True
                text: '_'
                color: (0.4, 0.4, 0.4, 1)  # Darker gray for empty marks
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                id: mark2
                size_hint_x: None
                width: dp(30)
                font_size: '40sp'
                font_name: 'assets/fonts/CODE2000.ttf'
                bold: True
                text: '_'
                color: (0.4, 0.4, 0.4, 1)  # Darker gray for empty marks
                text_size: self.size
                halign: 'center'
                valign: 'middle'

            Label:
                id: mark3
                size_hint_x: None
                width: dp(30)
                font_size: '40sp'
                font_name: 'assets/fonts/CODE2000.ttf'
                bold: True
                text: '_'
                color: (0.4, 0.4, 0.4, 1)  # Darker gray for empty marks
                text_size: self.size
                halign: 'center'
                valign: 'middle'

    Label:
        id: dots_label
        text: ''
        size_hint_y: 0.3  # Take 30% of height for dots
        font_size: '16sp'
        color: (0.8, 0.8, 0.8, 1)  # Light gray for dots
        text_size: self.size
        halign: 'center'
        valign: 'middle'

<DataInputScreen>:
    canvas.before:
        Color:
            rgba: (0.12, 0.12, 0.12, 1)  # Dark background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '15dp'

        Label:
            text: 'Window Cricket'
            font_size: '32sp'
            bold: True
            font_name: 'assets/fonts/Comfortaa-Bold.ttf'
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'vertical'
            spacing: '15dp'
            size_hint_y: 0.6
            # History and Replay buttons
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: '10dp'
                
                Button:
                    text: 'ðŸ“Š'
                    id: 'history'
                    font_name: 'assets/fonts/NotoEmoji-Regular.ttf'
                    font_size: '24sp'
                    background_normal: ''
                    background_color: (0.3, 0.3, 0.3, 1)
                    color: (0.9, 0.9, 0.9, 1)
                    size_hint_x: 0.5
                
                Button:
                    text: 'ðŸ”„'
                    id: 'replay'
                    font_name: 'assets/fonts/NotoEmoji-Regular.ttf'
                    font_size: '24sp'
                    background_normal: ''
                    background_color: (0.3, 0.3, 0.3, 1)
                    color: (0.9, 0.9, 0.9, 1)
                    size_hint_x: 0.5

            # Player 1 Name
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: '10dp'
                
                TextInput:
                    text: ''
                    id: player1_name
                    multiline: False
                    font_size: '20sp'
                    background_color: (0.12, 0.12, 0.12, 1)
                    foreground_color: (1, 1, 1, 1)
                    on_text_validate: root.navigate_next('player1_name')
                    on_text: root.validate_names()
                    hint_text: 'Enter Player 1 name'
                    hint_text_color: (0.5, 0.5, 0.5, 1)
                    focus: True

            # Player 2 Name
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: '10dp'
                                
                TextInput:
                    text: ''
                    id: player2_name
                    multiline: False
                    font_size: '20sp'
                    background_color: (0.12, 0.12, 0.12, 1)
                    foreground_color: (1, 1, 1, 1)
                    on_text_validate: root.navigate_next('player2_name')
                    on_text: root.validate_names()
                    hint_text: 'Enter Player 2 name'
                    hint_text_color: (0.5, 0.5, 0.5, 1)

            # Switch Positions Button
            Button:
                text: 'Switch Positions'
                size_hint_y: None
                height: dp(40)
                background_normal: ''
                background_color: (0.3, 0.3, 0.3, 1)
                color: (0.9, 0.9, 0.9, 1)
                font_size: '18sp'
                bold: True
                on_release: root.switch_positions()

            # Highest Scoring Sector
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: '10dp'
                
                Label:
                    text: 'Highest Sector:'
                    size_hint_x: 0.3
                    font_size: '20sp'
                
                Spinner:
                    id: highest_sector
                    text: '20'
                    values: [str(i) for i in range(20, 5, -1)]
                    size_hint_x: 0.35
                    font_size: '20sp'
                    on_text: root.update_lowest_sector()
                
                Label:
                    text: 'Lowest Sector:'
                    size_hint_x: 0.2
                    font_size: '20sp'
                
                Label:
                    id: lowest_sector
                    text: '15'
                    size_hint_x: 0.15
                    font_size: '20sp'

            # Bull Points
            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: '10dp'
                
                Label:
                    text: 'Bull Points:'
                    size_hint_x: 0.3
                    font_size: '20sp'
                
                BoxLayout:
                    size_hint_x: 0.7
                    spacing: '10dp'
                    
                    ToggleButton:
                        id: bull_highest_plus_5
                        text: highest_sector.text + ' + 5'
                        group: 'bull_points'
                        font_size: '20sp'
                        on_state: root.update_bull_points()
                        state: 'down'  # Default selected
                    
                    ToggleButton:
                        id: bull_25
                        text: '25 points'
                        group: 'bull_points'
                        font_size: '20sp'
                        on_state: root.update_bull_points()

        Button:
            id: start_game_button
            text: 'Start Game'
            font_name: 'assets/fonts/Comfortaa-Bold.ttf'
            size_hint_y: 0.2
            background_normal: ''
            background_color: (0.3, 0.7, 0.3, 1)
            color: (1, 1, 1, 1)
            font_size: '24sp'
            bold: True
            on_release: root.start_game()
            disabled: True

<GameScreen>:
    canvas.before:
        Color:
            rgba: (0.12, 0.12, 0.12, 1)  # Dark background
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'

        # Undo buttons section
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: '10dp'

            Button:
                text: 'Undo Prev Throw'
                size_hint_x: 0.5
                background_normal: ''
                background_color: (0.3, 0.3, 0.3, 1)  # Dark gray to match theme
                color: (0.9, 0.3, 0.3, 1)  # Red-ish text
                font_size: '18sp'
                bold: True

            Button:
                text: 'Undo a Hit'
                id: 'undo_mark_btn'
                size_hint_x: 0.5
                background_normal: ''
                background_color: (0.3, 0.3, 0.3, 1)  # Dark gray to match theme
                color: (0.9, 0.3, 0.3, 1)  # Red-ish text
                font_size: '18sp'
                bold: True
                on_release: root.undo_last_mark()

        # Players header section
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.15
            spacing: '10dp'

            # Player 1 section
            PlayerContainer:
                id: player1_container
                orientation: 'vertical'
                size_hint_x: 0.42
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                background_color: (0.2, 0.5, 0.2, 1)  # Initial green for player 1

                Label:
                    id: player1_name
                    text: 'Player 1'
                    font_size: '24sp'
                    bold: True
                    size_hint_y: 0.4

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.4
                    
                    Label:
                        id: player1_score
                        text: '0'
                        font_size: '32sp'
                        bold: True
                        size_hint_x: 0.6

                    Label:
                        id: player1_diff
                        text: '(-0)'
                        font_size: '28sp'
                        bold: True
                        size_hint_x: 0.4

                Label:
                    id: player1_mpr
                    text: 'MPR: 0.0'
                    font_size: '16sp'
                    bold: True
                    size_hint_y: 0.21

            Label:
                id: rounds
                text: 'R: 1'
                font_size: '26sp'
                bold: True
                size_hint_x: 0.16
                background_color: (0.5, 0.5, 0.5, 1)

            # Player 2 section
            PlayerContainer:
                id: player2_container
                orientation: 'vertical'
                size_hint_x: 0.42
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        pos: self.pos
                        size: self.size
                background_color: (0.18, 0.18, 0.18, 1)  # Initial dark gray for player 2

                Label:
                    id: player2_name
                    text: 'Player 2'
                    font_size: '24sp'
                    bold: True
                    size_hint_y: 0.4

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.4
                    
                    Label:
                        id: player2_score
                        text: '0'
                        font_size: '32sp'
                        bold: True
                        size_hint_x: 0.6

                    Label:
                        id: player2_diff
                        text: '(-0)'
                        font_size: '28sp'
                        bold: True
                        size_hint_x: 0.4

                Label:
                    id: player2_mpr
                    text: 'MPR: 0.0'
                    font_size: '16sp'
                    bold: True
                    size_hint_y: 0.21

        # Game Grid
        GridLayout:
            id: game_grid
            cols: 3
            size_hint_y: 0.7
            spacing: '5dp'
            padding: '5dp'

            # Dynamic sector rows will be added here by Python code

        # Next Player Button
        Button:
            id: next_player_btn
            text: 'Next Player'
            font_name: 'assets/fonts/Comfortaa-Bold.ttf'
            size_hint_y: 0.15
            background_normal: ''
            background_color: (0.3, 0.7, 0.3, 1)
            color: (1, 1, 1, 1)
            font_size: '22sp'
            bold: True
            on_release: root.next_player() 