#:kivy 2.2.1

<SectorButton>:
    background_normal: ''
    color: (1, 1, 1, 1)
    font_size: '28sp'
    bold: True
    size_hint_y: None
    height: dp(50)
    canvas.before:
        Color:
            rgba: [0.15, 0.45, 0.6, 1] if self.sector_state == 'normal' else ([0.2, 0.6, 0.2, 1] if self.sector_state == 'player_scoring' else ([0.8, 0.45, 0.0, 1] if self.sector_state == 'opponent_scoring' else [0.6, 0.6, 0.6, 1]))
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

<Label>:
    font_size: '24sp'
    color: (0.2, 0.2, 0.2, 1)
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<SectorIndicator>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(50)
    padding: ['5dp', '5dp']
    spacing: '5dp'

    Label:
        text: str(root.sector)
        size_hint_x: 0.3
        font_size: '20sp'
        bold: True
        color: (0.2, 0.2, 0.2, 1)

    BoxLayout:
        id: marks_box
        orientation: 'horizontal'
        size_hint_x: 0.7
        spacing: '4dp'
        padding: ['2dp', '8dp']

<GameScreen>:
    canvas.before:
        Color:
            rgba: (0.95, 0.95, 0.95, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'

        # Players header section
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.15
            spacing: '10dp'

            # Player 1 section
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5

                Label:
                    id: player1_name
                    text: 'Verano'
                    font_size: '24sp'
                    bold: True
                    size_hint_y: 0.5
                    canvas.before:
                        Color:
                            rgba: (0.9, 0.9, 0.9, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.5

                    Label:
                        id: player1_score
                        text: '0'
                        font_size: '28sp'
                        bold: True
                        size_hint_x: 0.6
                        canvas.before:
                            Color:
                                rgba: (0.9, 0.9, 0.9, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

                    Label:
                        id: player1_diff
                        text: 'Diff: 0'
                        font_size: '20sp'
                        bold: True
                        size_hint_x: 0.4
                        canvas.before:
                            Color:
                                rgba: (0.9, 0.9, 0.9, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

            # Player 2 section
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.5

                Label:
                    id: player2_name
                    text: 'Invierno'
                    font_size: '24sp'
                    bold: True
                    size_hint_y: 0.5
                    canvas.before:
                        Color:
                            rgba: (0.9, 0.9, 0.9, 1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.5

                    Label:
                        id: player2_score
                        text: '0'
                        font_size: '28sp'
                        bold: True
                        size_hint_x: 0.6
                        canvas.before:
                            Color:
                                rgba: (0.9, 0.9, 0.9, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

                    Label:
                        id: player2_diff
                        text: 'Diff: 0'
                        font_size: '20sp'
                        bold: True
                        size_hint_x: 0.4
                        canvas.before:
                            Color:
                                rgba: (0.9, 0.9, 0.9, 1)
                            Rectangle:
                                pos: self.pos
                                size: self.size

        # Game Grid
        GridLayout:
            id: game_grid
            cols: 3
            size_hint_y: 0.7
            spacing: '5dp'
            padding: '5dp'

            # Row 1 - Sector 9
            SectorIndicator:
                id: p1_sector_9
                sector: '9'
            SectorButton:
                id: btn_sector_9
                text: '9'
                on_release: root.on_sector_press('9')
            SectorIndicator:
                id: p2_sector_9
                sector: '9'

            # Row 2 - Sector 8
            SectorIndicator:
                id: p1_sector_8
                sector: '8'
            SectorButton:
                id: btn_sector_8
                text: '8'
                on_release: root.on_sector_press('8')
            SectorIndicator:
                id: p2_sector_8
                sector: '8'

            # Row 3 - Sector 7
            SectorIndicator:
                id: p1_sector_7
                sector: '7'
            SectorButton:
                id: btn_sector_7
                text: '7'
                on_release: root.on_sector_press('7')
            SectorIndicator:
                id: p2_sector_7
                sector: '7'

            # Row 4 - Sector 6
            SectorIndicator:
                id: p1_sector_6
                sector: '6'
            SectorButton:
                id: btn_sector_6
                text: '6'
                on_release: root.on_sector_press('6')
            SectorIndicator:
                id: p2_sector_6
                sector: '6'

            # Row 5 - Sector 5
            SectorIndicator:
                id: p1_sector_5
                sector: '5'
            SectorButton:
                id: btn_sector_5
                text: '5'
                on_release: root.on_sector_press('5')
            SectorIndicator:
                id: p2_sector_5
                sector: '5'

            # Row 6 - Sector 4
            SectorIndicator:
                id: p1_sector_4
                sector: '4'
            SectorButton:
                id: btn_sector_4
                text: '4'
                on_release: root.on_sector_press('4')
            SectorIndicator:
                id: p2_sector_4
                sector: '4'

            # Row 7 - Bull
            SectorIndicator:
                id: p1_sector_bull
                sector: 'Bull'
            SectorButton:
                id: btn_sector_bull
                text: 'Bull'
                on_release: root.on_sector_press('Bull')
            SectorIndicator:
                id: p2_sector_bull
                sector: 'Bull'

        # Next Player Button
        Button:
            id: next_player_btn
            text: 'Next Player'
            size_hint_y: 0.15
            background_normal: ''
            background_color: (0.3, 0.7, 0.3, 1)
            color: (1, 1, 1, 1)
            font_size: '22sp'
            bold: True
            on_release: root.next_player() 